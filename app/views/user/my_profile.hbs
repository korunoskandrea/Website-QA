<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script defer src="/js/nav_drawer.js"></script>
    <script defer src="/js/jwt-append.js"></script>
    <script defer src="/js/upload_profile_picture.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <title>Who am I?</title>
</head>
<body>
{{> nav }}
<div class="my-info">
    <div class="card-header" style="display: flex; justify-content: space-between">
        <label for="profilePicture"><b>Your Profile Picture: </b>
            <img style="width: 55px; height: 55px; border-radius: 100%; margin-right: 10px" src="{{ this.user.profilePicture }}" alt="{{ this.user.username }}">
        </label>
        <div class="profile-picture-upload">
            <form action="/myProfile?token={{ token }}" method="POST" enctype="multipart/form-data">
                <label for="image-upload" class="rounded-full py-2 px-4 bg-blue-500  cursor-pointer">Upload Image</label>
                <input type="file" id="image-upload" name="image" class="hidden" style="-webkit-appearance: none; appearance: none;">
                <button type="submit" class="rounded-full py-2 px-4 bg-red-500 ">Update Image</button>
            </form>
        </div>

    </div>
    <div class="card-header">
        <label for="firstName"><b>First Name: </b></label>
        <span class="info-text">{{ user.firstName }}</span>
    </div>
    <div class="card-header">
        <label for="lastName"><b>Last Name: </b></label>
        <span class="info-text">{{ user.lastName }}</span>
    </div>
    <div class="card-header">
        <label for="username"><b>Username: </b></label>
        <span class="info-text"> {{ user.username }}</span>
    </div>
    <div class="card-header">
        <label for="email"><b>Email: </b></label>
        <span class="info-text"> {{ user.email }}</span>
    </div>
    <div class="card-header">
        <label for="question-amount"><b>Num. of questions: </b></label>
        <span class="info-text"> {{ questions.length }}</span>
    </div>

</div>
</body>
</html>